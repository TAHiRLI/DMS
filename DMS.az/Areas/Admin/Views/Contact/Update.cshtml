@using DMS.az.Areas.Admin.ViewModels.Contact
@model ContactUpdateVM

<div class="main-panel">
    <div class="">
        <div class="card-body">
            <h4 class="card-title">Contact Update</h4>


            <form class="forms-sample" enctype="multipart/form-data" asp-action="update" asp-controller="Contact" method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" type="text" class="form-control" id="exampleInputName1" placeholder="Title" />
                    <span asp-validation-for="Address"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="exampleInputName1" placeholder="Title" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="text" class="form-control" id="exampleInputName1" placeholder="Title" />
                    <span asp-validation-for="Email"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2"> Update </button>
                <a asp-action="index" asp-controller="Contact" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>


@section scripts{
    @await Html.PartialAsync("_ImgUploadPartial")
}