@using DMS.az.Areas.Admin.ViewModels.AboutUs
@model AboutUsIndexVM

<div class="card-body">
    <h4 class="card-title">Basic Table</h4>
    <p class="card-description">
        Add class <code>.table</code>
    </p>

    <div class="px-4">


        @if (Model.AboutUs is not null)
        {
            @foreach (var item in Model.AboutUs)
            {
                <a asp-action="Update" asp-controller="AboutUs" asp-route-id="@item.Id" class="btn btn-primary">Update</a>

                <h3 class="mt-4">Şəkil 1</h3>
                <span>
                    <img src="~/Users/images/@item.Photo1" style="width: 100px" />
                </span>

                <h3 class="">Şəkil 2</h3>
                <span>
                    <img src="~/Users/images/@item.Photo2" style="width: 100px" />
                </span>

                <h3 class="">Şəkil 3</h3>
                <span>
                    <img src="~/Users/images/@item.Photo3" style="width: 100px" />
                </span>

                <h3>Təsvir</h3>
                <span>@Html.Raw(item.Description)</span>

            }

        }
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".btn-delete").on("click", (e) => {
            e.preventDefault()

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    let link = e.target.getAttribute("href")
                    fetch(link).then(res => {
                        //console.log(res.ok)
                        if (res.ok == true) {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            ).then(() => {
                                window.location.reload()
                            })

                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Something went wrong!',
                                footer: '<a href="">Why do I have this issue?</a>'
                            })
                        }
                    })
                }
            })
        })
    </script>
}
