@using DSM.az.Areas.Admin.ViewModels.Account
@model AccountLoginVM
@{
    Layout = null;
}

@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DSM Admin Login</title>
    <!--Google Fonts and Icons-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Round|Material+Icons+Sharp|Material+Icons+Two+Tone"
          rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200;300;400;500;600;700;800&family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/Admin/Admin-Login/admin-login.css">
</head>
<body>
    <div class="center">
        <form method="post" asp-action="login" asp-controller="account">
            <div class="title">Login</div>

            <div asp-validation-summary="ModelOnly"></div>

            <input type="hidden" asp-for="ReturnUrl" value="@returnUrl" />

            <span class="inputs">
                <span class="inputf">
                    <input type="email" class="input" asp-for="Email" placeholder="Email" />
                    <label class="label" asp-for="Email">Email</label>
                    <span asp-validation-for="Email"></span>
                    <span class="material-icons icon">email</span>
                </span>
                <span class="inputf">
                    <input type="password" class="input" asp-for="Password" placeholder="Password" />
                    <label class="label" asp-for="Password">Password</label>
                    <span asp-validation-for="Password"></span>
                    <span class="material-icons icon">lock</span>
                </span>
            </span>


            <div class="links">
                <a href="#">Forgot Password</a>
            </div>

            <button type="submit" class="btn">
                <span>Login</span>
                <div class="dots">
                    <div class="dot" style="--delay: 0s"></div>
                    <div class="dot" style="--delay: 0.2s"></div>
                    <div class="dot" style="--delay: 0.4s"></div>
                </div>
            </button>
        </form>
    </div>
</body>
</html>
<script src="~/Admin/Admin-Login/admin-login.js"></script>