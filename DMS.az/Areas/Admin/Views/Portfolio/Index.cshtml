@using DMS.az.Areas.Admin.ViewModels.Portfolio
@model PortfolioIndexVM

<div class="card-body">
    <h4 class="card-title">Basic Table</h4>
    <p class="card-description">
        Add class <code>.table</code>
    </p>

    <a class="btn btn-info mb-3" asp-action="Create" asp-controller="Portfolio">Create</a>


    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Şəkil</th>
                    <th>Başlıq</th>
                    <th>Kateqoriya</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Portfolios is not null)
                {
                    @foreach (var item in Model.Portfolios)
                    {
                        <tr>

                            <td class=""><img src="~/Users/images/@item.Photo" alt="image" /></td>
                            <td>@item.Title</td>
                            <td>@item.PortfolioCategory.Name</td>
                            <td>
                                @if (!item.IsDeleted)
                                {
                                    <span class="text-success">Active</span>
                                }
                                else
                                {
                                    <span class="text-danger">Non-Active</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn btn-info"><i class="mdi mdi-eye icon-lg"></i></a>
                                <a asp-action="Update" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn btn-primary"><i class="mdi mdi-pencil"></i></a>
                                <a asp-action="Delete" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn btn-danger btn-delete"> <i class="mdi mdi-delete"></i> </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".btn-delete").on("click", (e) => {
            e.preventDefault()

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    let link = e.target.getAttribute("href")
                    fetch(link).then(res => {
                        //console.log(res.ok)
                        if (res.ok == true) {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            ).then(() => {
                                window.location.reload()
                            })

                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Something went wrong!',
                                footer: '<a href="">Why do I have this issue?</a>'
                            })
                        }
                    })
                }
            })
        })
    </script>
}
