@using DSM.az.Areas.Admin.ViewModels.Slider
@using DMS.az.Enums;
@model SliderCreateVM

<div class="main-panel">
    <div class="">
        <div class="card-body">
            <h4 class="card-title">Slider Create</h4>


            <form class="forms-sample" enctype="multipart/form-data" asp-action="create" asp-controller="slider" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputName1" placeholder="Title" />
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Type"></label>
                    <select asp-for="Type" asp-items="@Html.GetEnumSelectList<SliderContentType>()" class="form-control form-control-lg" id="exampleFormControlSelect1">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Type"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MediaName">File upload</label>
                    <input asp-for="MediaName" class="form-control file-upload-info imgInput" placeholder="Upload File" />
                    <span asp-validation-for="MediaName"></span>

                    <div id="imgPreview" class="mt-1"></div>
                    <div id="videoPreview" class="mt-1"></div>

                </div>

                <button type="submit" class="btn btn-primary mr-2"> Create </button>
                <a asp-action="index" asp-controller="slider" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section scripts{
    @await Html.PartialAsync("_ImgUploadPartial")
}