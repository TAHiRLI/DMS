@using DMS.az.Areas.Admin.ViewModels.Video
@model VideoIndexVM

<div class="card-body">
    <h4 class="card-title">Basic Table</h4>
    <p class="card-description">
        Add class <code>.table</code>
    </p>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Cover Photo</th>
                    <th>Modified Date</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Video is not null)
                {
                    @foreach (var item in Model.Video)
                    {
                        <tr>

                            <td class="w-50 h-25"><img class="w-25 h-25 rounded-0" src="~/Users/Uploads/Video/@item.CoverPhoto" alt="" /></td>
                            <td> @item.ModifiedAt.ToShortDateString()</td>
                            <td>
                                <a asp-action="Update" asp-controller="video" asp-route-id="@item.Id" class="btn btn-primary"><i class="mdi mdi-pencil"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".btn-delete").on("click", (e) => {
            e.preventDefault()

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    let link = e.target.getAttribute("href")
                    fetch(link).then(res => {
                        //console.log(res.ok)
                        if (res.ok == true) {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            ).then(() => {
                                window.location.reload()
                            })

                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Something went wrong!',
                                footer: '<a href="">Why do I have this issue?</a>'
                            })
                        }
                    })
                }
            })
        })
    </script>
}
