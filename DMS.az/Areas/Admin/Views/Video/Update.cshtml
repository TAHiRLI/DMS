@using DMS.az.Areas.Admin.ViewModels.Video
@model VideoUpdateVM

<div class="main-panel">
    <div class="">
        <div class="card-body">
            <h4 class="card-title">Video Update</h4>


            <form class="forms-sample" enctype="multipart/form-data" asp-action="update" asp-controller="Video" method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Link"></label>
                    <input asp-for="Link" type="text" class="form-control" id="exampleInputName1" placeholder="" />
                    <span asp-validation-for="Link"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Photo">Şəkil</label>
                    <input asp-for="Photo" class="form-control imgInput" placeholder="" />
                    <span asp-validation-for="Photo"></span>

                    <div id="imgPreview" class="mt-1"></div>
                </div>

                <button type="submit" class="btn btn-primary mr-2"> Update </button>
                <a asp-action="index" asp-controller="Video" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>


@section scripts {
    @await Html.PartialAsync("_ImgUploadPartial")
}