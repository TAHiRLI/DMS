@using DMS.az.Models
@model List<Service>

<div class="row">
    @foreach (var service in Model)
    {
        <div class="col-lg-6">
            <div class="services purple ">
                <div class="services-info">
                    <div class="service-shap purple">
                        @*@<i class="ion-ios-cloud-download-outline"></i>*@
                        <img src="~/Users/Uploads/Services/@service.Icon " alt="DMS Azerbaijan @service.Name">
                    </div>
                    <h5 class="float-left mt-4">@service.Name</h5>
                    <div class="clearfix"></div>
                    <p class="mt-3 mb-0">@service.ShortDesc</p>
                </div>
                <a asp-controller="services" asp-action="details" asp-route-id="@service.Id" class="button-info">Read More <span class="float-right">. . .</span></a>
            </div>
        </div>
    }
</div>