    <link rel="stylesheet" href="~/Users/assets/css/offers/offers.css" />

    <script type="application/ld+json">
        @Html.Raw(JsonConvert.SerializeObject(new
    {
        @context = "https://schema.org",
        @type = "ProfessionalService",
        name = "DMS Azerbaijan Services",
        url = "https://www.dms.az/services",
        logo = "https://www.dms.az/path/to/logo.png",
        image = "https://www.dms.az/Users/newAssets/images/breadcrumb/services.png",
        description = "DMS Azerbaijan offers a comprehensive range of digital marketing and development services tailored to meet the needs of modern businesses in Azerbaijan and beyond.",
        provider = new
        {
            @type = "Organization",
            name = "DMS Azerbaijan",
            address = new
            {
                @type = "PostalAddress",
                streetAddress = "Fəzail Bayramov 1156",
                addressLocality = "Bakı",
                postalCode = "1100",
                addressCountry = "Azerbaijan"
            },
            contactPoint = new
            {
                @type = "ContactPoint",
                telephone = "+994 70 500 08 05",
                contactType = "customer support",
                areaServed = "AZ",
                availableLanguage = new[] { "Azerbaijani", "English" }
            }
        },
        hasOfferCatalog = new
        {
            @type = "OfferCatalog",
            name = "Services Offered",
            itemListElement = Model.Services.Select(service => new
            {
                @type = "Offer",
                itemOffered = new
                {
                    @type = "Service",
                    name = service.Name,
                    description = service.Description
                }
            }).ToList()
        }
    }, Newtonsoft.Json.Formatting.Indented))
    </script>
}

